<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Article"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <content
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Content"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <dataSource
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Data Source"
                                        name="./dataSource">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-dropdown-showhide-target=".datasource-showhide-target"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <default
                                                jcr:primaryType="nt:unstructured"
                                                selected="{Boolean}true"
                                                text="Manual"
                                                value="manual"/>
                                            <selection
                                                jcr:primaryType="nt:unstructured"
                                                text="Selection"
                                                value="selection"/>
                                        </items>
                                    </dataSource>
                                    <manual
                                        granite:class="show datasource-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="manual"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <image
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Image"
                                                name="./image"
                                                required="{Boolean}true"
                                                rootPath="/content/dam"/>
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Synopsis"
                                                name="./text"/>
                                        </items>
                                    </manual>
                                    <selection
                                        granite:class="show datasource-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="selection"/>
                                        <items jcr:primaryType="nt:unstructured"/>
                                    </selection>
                                    <link
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldLabel="Link"
                                        name="./link"
                                        rootPath="/content/dropbox"/>
                                    <tag
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Tag"
                                        name="./tag"/>
                                    <target
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Target"
                                        name="./target">
                                        <items jcr:primaryType="nt:unstructured">
                                            <blank
                                                jcr:primaryType="nt:unstructured"
                                                selected="{Boolean}true"
                                                text="New Window"
                                                value="_blank"/>
                                            <self
                                                jcr:primaryType="nt:unstructured"
                                                text="This Window"
                                                value="_self"/>
                                            <parent
                                                jcr:primaryType="nt:unstructured"
                                                text="Parent"
                                                value="_parent"/>
                                            <top
                                                jcr:primaryType="nt:unstructured"
                                                text="Top"
                                                value="_top"/>
                                        </items>
                                    </target>
                                    <enableButton
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        name="./enableButton"
                                        text="Enable Button"
                                        value="true"/>
                                </items>
                            </column>
                        </items>
                    </content>
                    <buttonTab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/dropbox-dmep/components/atoms/button/cq:dialog/content/items/tabs/items/properties"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
